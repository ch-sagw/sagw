{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "bash vercel.sh",
  "crons": [
    {
      "path": "/api/cron-blob-backup",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron-db-backup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron-cleanup-backups",
      "schedule": "0 3 * * *"
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": false
    }
  }
}