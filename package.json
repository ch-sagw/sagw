{
  "name": "sagw",
  "version": "0.0.1",
  "description": "Codebase for SAGW websites.",
  "author": "Vorhall KlG <info@vorhall.com> (https://vorhall.com)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start:db": "docker compose -f docker-compose.yml run --rm -p 27017:27017 mongodb --quiet --syslog",
    "dev:local": "cross-env NODE_OPTIONS=--no-deprecation ENV=local next dev",
    "dev:test": "cross-env NODE_OPTIONS=--no-deprecation ENV=test next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation ENV=prod next dev",
    "dev": "concurrently \"npm run start:db\" \"npm run dev:local\"",
    "build": "cross-env NODE_OPTIONS=--no-deprecation ENV=test next build",
    "build:prod": "cross-env NODE_OPTIONS=--no-deprecation ENV=prod next build",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "storybook": "storybook dev -p 6006",
    "storybook:ci": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build",
    "test:native": "playwright test",
    "test:native:watch": "playwright test --ui-port=8080 --ui-host=0.0.0.0",
    "docker:test:build": "sudo docker compose -f docker-compose.yml build",
    "test": "docker compose -f docker-compose.yml run --rm visual-test npm run test:native",
    "test:watch": "docker compose -f docker-compose.yml run --rm -p 8080:8080 visual-test npm run test:native:watch",
    "generate:component": "tsx convenience/generate-component/index",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint:js": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:scss": "stylelint '**/*.scss'",
    "lint": "npm run lint:js && npm run lint:scss",
    "commitlint": "commitlint --edit",
    "restore:blob": "cross-env ENV=test tsx ./src/backup-restore/restores/blob-restore",
    "restore:db": "cross-env ENV=test tsx ./src/backup-restore/restores/db-restore",
    "restore:blob:prod": "cross-env ENV=prod tsx ./src/backup-restore/restores/blob-restore",
    "restore:db:prod": "cross-env ENV=prod tsx ./src/backup-restore/restores/db-restore",
    "backup:maintenance": "cross-env ENV=test tsx ./src/backup-restore/maintenance/index",
    "backup:maintenance:prod": "cross-env ENV=prod tsx ./src/backup-restore/maintenance/index",
    "replicate:prod": "tsx ./src/backup-restore/restores/replicate-prod",
    "prepare": "husky"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^3.37.0",
    "@payloadcms/email-resend": "^3.37.0",
    "@payloadcms/next": "^3.37.0",
    "@payloadcms/richtext-lexical": "^3.37.0",
    "@payloadcms/storage-vercel-blob": "^3.37.0",
    "@sentry/nextjs": "^9.17.0",
    "cross-env": "^7.0.3",
    "graphql": "^16.11.0",
    "next": "15.3.2",
    "payload": "^3.37.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "resend": "^4.5.1",
    "server-only": "^0.0.1",
    "sharp": "0.34.1"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/lib-storage": "^3.821.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "^1.52.0",
    "@storybook/nextjs": "^9.0.4",
    "@storybook/react": "^9.0.4",
    "@stylistic/stylelint-config": "^2.0.0",
    "@stylistic/stylelint-plugin": "^3.1.2",
    "@types/node": "^22.15.29",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@vercel/blob": "^1.1.1",
    "boxen": "^8.0.1",
    "bson": "^6.10.3",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-storybook": "^9.0.4",
    "husky": "^9.1.7",
    "inquirer": "^12.6.3",
    "lint-staged": "^16.1.0",
    "mongodb": "^6.16.0",
    "sass": "^1.89.1",
    "storybook": "^9.0.4",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "tsx": "^4.19.4",
    "typescript": "5.8.3",
    "vercel": "^42.3.0"
  },
  "engines": {
    "node": "22.x"
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
