{
  "name": "sagw",
  "version": "0.0.1",
  "description": "Codebase for SAGW websites.",
  "author": "Vorhall KlG <info@vorhall.com> (https://vorhall.com)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start:db": "docker compose -f docker-compose.yml run --rm -p 27017:27017 mongo --quiet --syslog",
    "dev:local": "cross-env NODE_OPTIONS=--no-deprecation ENV=local next dev -H 0.0.0.0 -p 3000",
    "dev:test": "cross-env NODE_OPTIONS=--no-deprecation ENV=test next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation ENV=prod next dev",
    "dev": "concurrently \"npm run start:db\" \"npm run dev:local\"",
    "build": "cross-env NODE_OPTIONS=--no-deprecation ENV=test next build",
    "build:prod": "cross-env NODE_OPTIONS=--no-deprecation ENV=prod next build",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "storybook": "storybook dev -p 6006",
    "storybook:ci": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build",
    "docker:build": "sudo docker compose -f docker-compose.yml build",
    "test:fe:native": "playwright test -c playwright-fe.config.ts",
    "test:fe:native:watch": "playwright test -c playwright-fe.config.ts --ui-port=8080 --ui-host=0.0.0.0",
    "test:fe": "docker compose -f docker-compose.yml run --rm fe npm run test:fe:native",
    "test:fe:watch": "docker compose -f docker-compose.yml run --rm -p 8080:8080 fe npm run test:fe:native:watch",
    "test:be:native": "npx playwright test -c playwright-be.config.ts",
    "test:be:watch:native": "npx playwright test -c playwright-be.config.ts --ui-port=8080 --ui-host=0.0.0.0",
    "test:be": "docker compose -f docker-compose.yml run --rm be npm run test:be:native",
    "test:be:watch": "docker compose -f docker-compose.yml run --rm -p 8080:8080 be npm run test:be:watch:native",
    "generate:component": "tsx convenience/generate-component/index",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint:js": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:scss": "stylelint '**/*.scss'",
    "lint": "npm run lint:js && npm run lint:scss",
    "commitlint": "commitlint --edit",
    "restore:blob:prod": "cross-env ENV=prod tsx ./src/backup-restore/restores/blob-restore",
    "restore:db:prod": "cross-env ENV=prod tsx ./src/backup-restore/restores/db-restore",
    "backup:maintenance:prod": "cross-env ENV=prod tsx ./src/backup-restore/maintenance/index",
    "replicate:prod": "tsx ./src/backup-restore/restores/replicate-prod",
    "prepare": "husky"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^3.52.0",
    "@payloadcms/email-resend": "^3.52.0",
    "@payloadcms/next": "^3.52.0",
    "@payloadcms/plugin-multi-tenant": "^3.52.0",
    "@payloadcms/plugin-seo": "^3.52.0",
    "@payloadcms/richtext-lexical": "^3.52.0",
    "@payloadcms/storage-vercel-blob": "^3.52.0",
    "@sentry/nextjs": "^10.5.0",
    "cross-env": "^10.0.0",
    "graphql": "^16.11.0",
    "next": "15.4.7",
    "payload": "^3.52.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "resend": "^6.0.1",
    "server-only": "^0.0.1",
    "sharp": "0.34.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.802.0",
    "@aws-sdk/lib-storage": "^3.802.0",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/nextjs-vite": "^9.1.2",
    "@stylistic/stylelint-config": "^3.0.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@vercel/blob": "^1.0.1",
    "boxen": "^8.0.1",
    "bson": "^6.10.3",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "dotenv": "^17.2.1",
    "eslint": "^9.26.0",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-storybook": "^9.1.2",
    "husky": "^9.1.7",
    "inquirer": "^12.6.0",
    "lint-staged": "^16.1.5",
    "mongodb": "^6.16.0",
    "playwright": "^1.54.2",
    "sass": "^1.87.0",
    "storybook": "^9.1.2",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "ts-morph": "^26.0.0",
    "tsx": "^4.19.4",
    "typescript": "5.9.2",
    "vercel": "^46.0.2",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": "22.x"
  }
}