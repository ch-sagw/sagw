{
  "name": "sagw",
  "version": "0.24.0",
  "description": "Codebase for SAGW websites.",
  "author": "Vorhall KlG <info@vorhall.com> (https://vorhall.com)",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "generate:pages:collections": "tsx src/collections/Pages/generatePayloadPageImports.ts",
    "start:db": "docker compose -f docker-compose.yml run --rm -p 27017:27017 mongo --quiet --syslog",
    "dev:local": "cross-env NODE_OPTIONS=--no-deprecation ENV=local next dev -H 0.0.0.0 -p 3000",
    "dev:local:seed": "cross-env NODE_OPTIONS=--no-deprecation ENV=seed next dev -H 0.0.0.0 -p 3000",
    "dev:test": "npm run generate:pages:collections && cross-env NODE_OPTIONS=--no-deprecation ENV=test next dev",
    "dev:prod": "npm run generate:pages:collections && cross-env NODE_OPTIONS=--no-deprecation ENV=prod next dev",
    "dev": "concurrently \"npm run generate:pages:collections\" \"npm run start:db\" \"npm run dev:local\"",
    "dev:seed": "concurrently \"npm run generate:pages:collections\" \"npm run start:db\" \"npm run dev:local:seed\"",
    "build": "npm run generate:pages:collections && cross-env NODE_OPTIONS=--no-deprecation ENV=test next build",
    "build:prod": "npm run generate:pages:collections && cross-env NODE_OPTIONS=--no-deprecation ENV=prod next build",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "storybook": "storybook dev -p 6006",
    "storybook:ci": "storybook dev -p 6006 --ci",
    "build-storybook": "storybook build",
    "docker:build": "sudo docker compose -f docker-compose.yml build",
    "test:fe:native": "playwright test -c playwright-fe.config.ts",
    "test:fe:native:shard": "playwright test --shard=$SHARD_INDEX/$SHARD_TOTAL -c playwright-fe.config.ts",
    "test:fe:native:watch": "playwright test -c playwright-fe.config.ts --ui-port=8080 --ui-host=0.0.0.0",
    "test:fe": "docker compose -f docker-compose.yml run --rm fe npm run test:fe:native",
    "test:fe:watch": "docker compose -f docker-compose.yml run --rm -p 8080:8080 fe npm run test:fe:native:watch",
    "test:be:native": "npm run generate:pages:collections && npx playwright test -c playwright-be.config.ts",
    "test:be:native:shard": "npm run generate:pages:collections && npx playwright test --shard=$SHARD_INDEX/$SHARD_TOTAL -c playwright-be.config.ts",
    "test:be:watch:native": "npm run generate:pages:collections && npx playwright test -c playwright-be.config.ts --ui-port=8080 --ui-host=0.0.0.0",
    "test:be": "docker compose -f docker-compose.yml run --rm be npm run test:be:native",
    "test:be:watch": "docker compose -f docker-compose.yml run --rm -p 8080:8080 be npm run test:be:watch:native",
    "generate:component": "tsx convenience/generate-component/index",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint:js": "cross-env NODE_OPTIONS=--no-deprecation eslint .",
    "lint:scss": "stylelint '**/*.scss'",
    "lint": "npm run lint:js && npm run lint:scss",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "orphaned:screenshots": "tsx ./src/automated-testing/orphanedScreenshots.ts",
    "type-check": "tsc"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "^3.64.0",
    "@payloadcms/email-resend": "^3.64.0",
    "@payloadcms/next": "^3.64.0",
    "@payloadcms/plugin-multi-tenant": "^3.64.0",
    "@payloadcms/plugin-sentry": "^3.64.0",
    "@payloadcms/plugin-seo": "^3.64.0",
    "@payloadcms/richtext-lexical": "^3.64.0",
    "@payloadcms/storage-vercel-blob": "^3.64.0",
    "@sentry/nextjs": "^10.25.0",
    "cross-env": "^10.0.0",
    "dompurify": "^3.3.0",
    "graphql": "^16.12.0",
    "jsdom": "^27.0.0",
    "next": "^15.4.7",
    "payload": "^3.64.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "resend": "^6.4.2",
    "server-only": "^0.0.1",
    "sharp": "0.34.5",
    "slugify": "^1.6.6",
    "validator": "^13.15.23",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "^10.0.6",
    "@storybook/nextjs-vite": "^10.0.6",
    "@stylistic/stylelint-config": "^3.0.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "@types/validator": "^13.15.6",
    "concurrently": "^9.2.1",
    "cva": "npm:class-variance-authority@^0.7.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.39.1",
    "eslint-config-next": "16.0.1",
    "eslint-plugin-storybook": "^10.0.6",
    "husky": "^9.1.7",
    "inquirer": "^12.11.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "sass": "^1.93.3",
    "schema-dts": "^1.1.5",
    "storybook": "^10.0.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "ts-morph": "^27.0.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vercel": "^48.10.3",
    "vite": "^7.2.2"
  },
  "engines": {
    "node": "22.x"
  }
}